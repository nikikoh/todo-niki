.container
  %h2.header_new New Comment
  %hr.border_room
.container
  %h2
  = form_with(model: @comment, url: task_comments_path(@comment.task), local: true) do |f|
    = render 'layouts/error_messages', model: f.object

    %div
      =f.label :comment, 'Description'
    %div
      =f.text_area :comment

    %div.submit_btn
      = f.submit '保存'