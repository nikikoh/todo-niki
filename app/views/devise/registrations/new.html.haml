%h2.sign_up_title Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name, class: 'label_title'
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "name", class: 'date_room'
  .field
    = f.label :password, class: 'label_title'
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", class: 'date_room'
  .field
    = f.label :password_confirmation, class: 'label_title'
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'date_room'
  .actions
    = f.submit "Submit", class: 'sign_up_btn'
= render "devise/shared/links"
