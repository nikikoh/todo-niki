!!!
%html
  %head
    %meta{:content => "text/html; charseat=UTF-8", "http-equiv" => "Content-Type"}/
    %title TODO USER
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      %nav
        - if user_signed_in?
          ログインしているユーザー
          %strong= current_user.name
          = link_to 'サインアウト', destroy_user_session_path, method: :delete
        - else
          = link_to 'サインアップ', new_user_registration_path, class:'underbar'
          = link_to 'ログイン', new_user_session_path, class:'underbar'
    %p.notice= notice
    %p.alert= alert
    = yield
