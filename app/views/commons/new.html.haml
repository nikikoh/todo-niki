.container
  %ul
    - comment.errors.full_messange.each do |message|
      %li= message
  = form_with(model: @comment, url: task_comments_path(@comment.task), local: true) do |f|
    %div
        = f.label :content, '内容'
    %div
        = f.text_area :content
    = f.submit 'submit', class: 'submit_btn'